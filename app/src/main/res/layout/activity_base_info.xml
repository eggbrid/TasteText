<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/layout_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/app_pref_bg"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户信息"
                    android:textSize="30dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_conner_wcolor"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="姓名"
                        android:textSize="25dp" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="190dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:imeOptions="actionNext"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_login_input"
                        android:gravity="center_vertical|right"
                        android:maxLength="5"
                        android:padding="10dp"
                        android:text="王旭旭旭旭"
                        android:textSize="30dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_conner_wcolor"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="性别"
                        android:textSize="25dp" />

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <CheckBox
                            android:id="@+id/man"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/checkbox_selector"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:text="男"
                            android:textColor="@drawable/checkbox_text_selector"
                            android:textSize="30dp" />

                        <CheckBox
                            android:id="@+id/woman"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/checkbox_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="女"
                            android:textColor="@drawable/checkbox_text_selector"
                            android:textSize="30dp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_conner_wcolor"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="手机"
                        android:textSize="25dp" />

                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="250dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_login_input"
                        android:imeOptions="actionNext"
                        android:gravity="center_vertical|right"
                        android:inputType="number"
                        android:maxLength="11"
                        android:padding="10dp"
                        android:text="13520635506"
                        android:textSize="30dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_conner_wcolor"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="出生"
                        android:textSize="25dp" />

                    <Button
                        android:id="@+id/birthday"
                        android:layout_width="250dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_login_input"
                        android:gravity="center_vertical|right"
                        android:maxLength="11"
                        android:padding="10dp"
                        android:text="1990-07-02"
                        android:textSize="30dp" />
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/content"
                android:layout_margin="20dp"
                android:background="@drawable/bg_corner_blue"
                android:padding="20dp"
                android:text="确认信息"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>