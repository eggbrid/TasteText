<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/layout_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/app_pref_bg"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户信息"
                    android:textSize="30dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_conner_wcolor"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="身高"
                        android:textSize="25dp" />

                    <EditText
                        android:id="@+id/ehight"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/height"
                        android:background="@drawable/bg_login_input"
                        android:gravity="center_vertical|right"
                        android:imeOptions="actionNext"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:inputType="number"
                        android:text=""
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="cm        "
                        android:textSize="25dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_conner_wcolor"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="体重"
                        android:textSize="25dp" />

                    <EditText
                        android:id="@+id/eweight"
                        android:inputType="number"
                        android:layout_width="100dp"

                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/weight"
                        android:background="@drawable/bg_login_input"
                        android:gravity="center_vertical|right"
                        android:imeOptions="actionNext"
                        android:maxLength="3"
                        android:padding="10dp"
                        android:text=""
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="kg          "
                        android:textSize="25dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_conner_wcolor"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="血糖"
                        android:textSize="25dp" />

                    <EditText
                        android:id="@+id/ebloodsugar"
                        android:layout_width="100dp"
                        android:inputType="numberDecimal"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/bloodsugar"
                        android:background="@drawable/bg_login_input"
                        android:gravity="center_vertical|right"
                        android:imeOptions="actionNext"
                        android:maxLength="7"
                        android:padding="10dp"
                        android:text=""
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/bloodsugar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="mmol/L"
                        android:textSize="25dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_conner_wcolor"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="血压"
                        android:textSize="25dp" />

                    <EditText
                        android:id="@+id/ebloodpressure"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:inputType="number"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/bloodpressure"
                        android:background="@drawable/bg_login_input"
                        android:gravity="center_vertical|right"
                        android:imeOptions="actionNext"
                        android:maxLength="5"
                        android:padding="10dp"
                        android:text=""
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/bloodpressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="mmhg   "
                        android:textSize="25dp" />
                </RelativeLayout>


            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/content"
                android:layout_margin="20dp"
                android:background="@drawable/bg_corner_blue"
                android:padding="20dp"
                android:text="确认信息"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>